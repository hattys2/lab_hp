<div class="container">
  <p>
  <strong>タイトル：</strong><br>
  <%= @post.title %>
  </p>

  <p>
  <strong>著者、出典：</strong><br>
  <%= @post.author%>
  </p>

  <p>
  <strong>発表者：</strong><br>
  <%= @post.name%>
  </p>

  <p>
  <strong>日本語要約：</strong><br>
  <%= @post.jtext%>
  </p>

  <p>
  <strong>内容：</strong><br>
  <%= @post.etext %>
  </p>
  <br>
  <br>
  <br>
  <br>
  <p>
  <strong>コメント</strong><br>
  <%= render @post.comments %>
  </p>

  <p>
  <strong>コメントを追加</strong>
<%= form_for( [@post, @post.comments.build] ) do |f| %>
  <p>
    <%= f.label :commenter, "コメンター" %><br />
    <%= f.text_field :commenter %>
  </p>

  <p>
    <%= f.label :body, "コメント" %><br />
    <%= f.text_area :body, cols: 60, rows: 8 %>
  </p>

  <p>
    <%= f.submit "コメント投稿" %>
  </p>
<% end %>
  </p>

  <%= link_to '戻る', posts_path %>
  | <%= link_to '編集', edit_post_path(@post) %>

</div>
